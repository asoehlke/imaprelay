{
  "name": "Imap Relay",
  "version": "0.1.1",
  "slug": "imaprelay",
  "description": "Relay mailbox to filtered recipients",
  "url": "https://github.com/asoehlke/imaprelay",
  "arch": [
    "armhf",
    "armv7",
    "aarch64",
    "amd64",
    "i386"
  ],
  "boot": "auto",
  "options": {
    "imap": {
      "hostname": null,
      "username": null,
      "password": null
    },
    "smtp": {
      "hostname": null,
      "username": null,
      "password": null
    },
    "relay": {
      "interval": 10,
      "inbox": "INBOX",
      "archive": "Archive",
      "error": "Error",
      "from": "forwarder@myserver.de",
      "sender": "catchall@myserver.de"
    },
    "recipients": [
      {
        "name": "all",
        "filter": "ALL",
        "to": "all-the-rest@myserver.de"
      }
    ]
  },
  "schema": {
    "imap": {
      "hostname": "str",
      "username": "str",
      "password": "str"
    },
    "smtp": {
      "hostname": "str",
      "username": "str",
      "password": "str"
    },
    "relay": {
      "interval": "int(1,)",
      "inbox": "str",
      "archive": "str",
      "error": "str",
      "from": "email",
      "sender": "email"
    },
    "recipients": [
      {
        "name": "str",
        "filter": "str",
        "to": "email"
      }
    ]
  }
}